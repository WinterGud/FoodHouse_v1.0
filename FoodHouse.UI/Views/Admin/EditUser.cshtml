@model FoodHouse.UI.Models.ViewModel.Admin.Users.UsersEditViewModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="favicon.png">
    <meta name="description" content=""/>
    <meta name="keywords" content="bootstrap, bootstrap4"/>
    <!-- Bootstrap CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="~/css/tiny-slider.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <title>Кабінет користувача - Налаштування</title>
</head>
<body class="body">
<div class="sidebar-wrapper">
    <nav class="open" id="openb">
        <ul>
            <li>
                <button class="burger__button-btn nav-btn" id="burger">
                    <span></span><span></span><span></span>
                </button>
            </li>
            <li>
                <a href="#" class="profile">
                    <img src="~/images/icons/man_av.svg" alt="profile">
                    <span class="nav-item">@Model.UserName</span>
                </a>
            </li>
            <li>
                <a asp-action="Index" asp-controller="Profile" class="nav-menu">
                    <i class="bx bxs-user nav-icon"></i>
                    <span class="nav-item">Base page</span>
                </a>
            </li>
            <li>
                <a asp-action="Users" asp-controller="Admin" class="nav-menu">
                    <i class="bx bxs-dashboard nav-icon"></i>
                    <span class="nav-item">Users Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-action="Orders" asp-controller="Admin" class="nav-menu">
                    <i class="bx bxs-box nav-icon"></i>
                    <span class="nav-item">Orders Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-action="Products" asp-controller="Admin" class="nav-menu">
                    <i class="bx bxs-category-alt nav-icon"></i>
                    <span class="nav-item">Products Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-action="Coupons" asp-controller="Admin" class="nav-menu">
                    <i class="bx bxs-coupon nav-icon"></i>
                    <span class="nav-item">Coupons Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-action="Messages" asp-controller="Admin" class="nav-menu">
                    <i class="bx bxs-envelope nav-icon"></i>
                    <span class="nav-item">Messages Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-action="Balance" class="nav-menu">
                    <i class="bx bxs-wallet nav-icon"></i>
                    <span class="nav-item">Ballance</span>
                </a>
            </li>
            <li>
                <a asp-action="Logout" asp-controller="Autentificate" class="nav-menu">
                    <i class="bx bx-log-in nav-icon"></i>
                    <span class="nav-item">Log Out</span>
                </a>
            </li>
        </ul>
    </nav>
    <div class="table-container mtb-3">
        <div class="table-responsive">
            <div class="change">
                <form class="change-form" asp-action="UpdateUser" asp-controller="Admin" method="post">
                    @{
                        if (!String.IsNullOrEmpty(Model != null ? Model.FirstNameMessage : string.Empty))
                        {
                            <input type="text" class="form-control" id="fname" asp-for="FirstName" required placeholder="Andrii" maxlength="13">
                            <div class="alert alert-dismissible alert-danger problem">
                                <p style="font-size:12px; text-align:center" class="mt-3">@Model.FirstNameMessage</p>
                            </div>
                        }
                        else
                        {
                            <input type="text" class="form-control mb-2" id="fname" asp-for="FirstName" required placeholder="Andrii" maxlength="13">
                        }

                        if (!String.IsNullOrEmpty(Model != null ? Model.LastNameMessage : string.Empty))
                        {
                            <input type="text" class="form-control" id="lname" asp-for="LastName" required placeholder="Ivanov" maxlength="13">
                            <div class="alert alert-dismissible alert-danger problem">
                                <p style="font-size:12px; text-align:center" class="mt-3">@Model.LastNameMessage</p>
                            </div>
                        }
                        else
                        {
                            <input type="text" class="form-control mb-2" id="lname" asp-for="LastName" required placeholder="Ivanov" maxlength="13">
                        }

                        if (!String.IsNullOrEmpty(Model != null ? Model.EmailMessage : string.Empty))
                        {
                            <input type="email" class="form-control" id="email" asp-for="Email" required placeholder="ivanovandrii@gmail.com">
                            <div class="alert alert-dismissible alert-danger problem">
                                <p style="font-size:12px; text-align:center" class="mt-3">@Model.EmailMessage</p>
                            </div>
                        }
                        else
                        {
                            <input type="email" class="form-control mb-2" id="email" asp-for="Email" required placeholder="ivanovandrii@gmail.com">
                        }

                        if (!String.IsNullOrEmpty(Model != null ? Model.NumberMessage : string.Empty))
                        {
                            <input type="text" class="form-control" id="number" asp-for="Number" required placeholder="098 535-434" maxlength="15">

                            <div class="alert alert-dismissible alert-danger problem">
                                <p style="font-size:12px; text-align:center" class="mt-3">@Model.NumberMessage</p>
                            </div>
                        }
                        else
                        {
                            <input type="text" class="form-control mb-2" id="number" asp-for="Number" required placeholder="098 535-434" maxlength="15">
                        }

                        if (!String.IsNullOrEmpty(Model != null ? Model.PasswordMessage : string.Empty))
                        {
                            <input type="text" class="form-control" id="password" asp-for="Password" required placeholder="df9Df1uu">
                            <div class="alert alert-dismissible alert-danger problem">
                                <p style="font-size:12px; text-align:center" class="mt-3">@Model.PasswordMessage</p>
                            </div>
                        }
                        else
                        {
                            <input type="text" class="form-control mb-2" id="password" asp-for="Password" required placeholder="df9Df1uu">
                        }
                    }

                    <input type="hidden" asp-for="StringId"/>
                    <button class="button-register btn btn-outline-secondary" type="submit">Change</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="~/js/site.js"></script>
</body>
</html>